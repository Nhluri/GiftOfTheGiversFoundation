@model GiftOfTheGiversFoundation.Models.User
@{
    Layout = null; // This completely removes layout dependency
    ViewData["Title"] = "User Details";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gift Of The Givers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3f37c9;
            --info: #4cc9f0;
            --success: #22c55e;
            --dark: #1d3557;
            --light: #f8f9fa;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .details-container {
            max-width: 900px;
            width: 100%;
        }

        .details-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 20px 50px rgba(0,0,0,0.15);
        }

        .details-header {
            background: linear-gradient(135deg, var(--info) 0%, #4895ef 100%);
            color: white;
            padding: 40px;
            text-align: center;
            position: relative;
        }

        .header-icon {
            font-size: 3rem;
            margin-bottom: 15px;
            opacity: 0.9;
        }

        .details-header h1 {
            margin: 0;
            font-weight: 700;
            font-size: 2.2rem;
        }

        .details-header p {
            margin: 10px 0 0;
            opacity: 0.9;
            font-size: 1.1rem;
        }

        .details-body {
            padding: 40px;
        }

        .back-btn {
            background: white;
            color: var(--primary);
            border: 2px solid var(--primary);
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            margin-bottom: 20px;
            gap: 8px;
        }

            .back-btn:hover {
                background: var(--primary);
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
            }

        /* User Profile Section */
        .user-profile {
            background: var(--light);
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            text-align: center;
        }

        .user-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            border: 4px solid white;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

            .user-avatar i {
                font-size: 3rem;
                color: white;
            }

        .user-name {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 5px;
        }

        .user-email {
            font-size: 1.1rem;
            color: #6c757d;
            margin-bottom: 15px;
        }

        .role-badge {
            display: inline-block;
            padding: 8px 20px;
            border-radius: 25px;
            font-size: 0.9rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .role-admin {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            color: white;
        }

        .role-volunteer {
            background: linear-gradient(135deg, var(--info) 0%, #4895ef 100%);
            color: white;
        }

        .role-user {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            color: white;
        }

        /* Details Grid */
        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
        }

        .detail-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            border-left: 5px solid var(--info);
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            transition: all 0.3s ease;
        }

            .detail-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            }

        .detail-header {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 2px solid #f1f3f4;
        }

        .detail-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            background: linear-gradient(135deg, var(--info) 0%, #4895ef 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
        }

            .detail-icon i {
                font-size: 1.3rem;
                color: white;
            }

        .detail-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--dark);
            margin: 0;
        }

        .detail-content {
            color: #495057;
        }

        .detail-value {
            font-size: 1.1rem;
            font-weight: 500;
            color: var(--dark);
            margin-bottom: 5px;
        }

        .detail-label {
            font-size: 0.85rem;
            color: #6c757d;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* Account Stats */
        .account-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            border-top: 4px solid var(--info);
        }

        .stat-icon {
            font-size: 2rem;
            color: var(--info);
            margin-bottom: 10px;
        }

        .stat-value {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--dark);
            display: block;
        }

        .stat-label {
            font-size: 0.9rem;
            color: #6c757d;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 30px;
            padding-top: 30px;
            border-top: 2px solid #f1f3f4;
        }

        .btn-action {
            padding: 12px 25px;
            border-radius: 10px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            min-width: 140px;
            justify-content: center;
        }

        .btn-edit {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            color: white;
            border: none;
        }

        .btn-back {
            background: white;
            color: #6c757d;
            border: 2px solid #6c757d;
        }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 7px 20px rgba(0,0,0,0.15);
            text-decoration: none;
        }

        .btn-edit:hover {
            color: white;
        }

        .btn-back:hover {
            background: #6c757d;
            color: white;
        }

        /* Password Security */
        .password-security {
            background: linear-gradient(135deg, #fef3c7 0%, #fef7cd 100%);
            border: 2px solid #f59e0b;
            border-radius: 12px;
            padding: 20px;
            margin-top: 20px;
            text-align: center;
        }

        .security-icon {
            font-size: 2rem;
            color: #d97706;
            margin-bottom: 10px;
        }

        .security-text {
            color: #92400e;
            margin: 0;
            font-size: 0.95rem;
        }

    </style>
</head>
<body>
    <div class="details-container">
        <!-- Back Button -->
        <a href="/UserManagement/Index" class="back-btn">
            <i class="fas fa-arrow-left"></i> Back to Users
        </a>

        <div class="details-card">
            <!-- Header Section -->
            <div class="details-header">
                <div class="header-icon">
                    <i class="fas fa-user-circle"></i>
                </div>
                <h1>User Details</h1>
                <p>Complete user information and account details</p>
            </div>

            <!-- Body Section -->
            <div class="details-body">
                <!-- User Profile -->
                <div class="user-profile">
                    <div class="user-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="user-name">@Model.FullName</div>
                    <div class="user-email">@Model.Email</div>
                    <span class="role-badge @($"role-{Model.Role?.ToLower()}")">
                        @Model.Role
                    </span>
                </div>

                <!-- Account Statistics -->
                <div class="account-stats">
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <span class="stat-value">
                            @{
                                var accountAge = DateTime.Now - Model.DateCreated;
                                var days = accountAge.Days;
                                var months = days / 30;
                                var years = months / 12;

                                if (years > 0)
                                {
                                    @years
                                }
                                else if (months > 0)
                                {
                                    @months
                                }
                                else
                                {
                                    @days
                                }
                            }
                        </span>
                        <span class="stat-label">
                            @if (years > 0)
                            {
                                <text>Year@(years > 1 ? "s" : "")</text>
                            }
                            else if (months > 0)
                            {
                                <text>Month@(months > 1 ? "s" : "")</text>
                            }
                            else
                            {
                                <text>Day@(days > 1 ? "s" : "")</text>
                            }
                        </span>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <span class="stat-value">@Model.Role</span>
                        <span class="stat-label">Role</span>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <span class="stat-value">Active</span>
                        <span class="stat-label">Status</span>
                    </div>
                </div>

                <!-- User Details Grid -->
                <div class="details-grid">
                    <!-- Personal Information -->
                    <div class="detail-card">
                        <div class="detail-header">
                            <div class="detail-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <h3 class="detail-title">Personal Information</h3>
                        </div>
                        <div class="detail-content">
                            <div class="mb-3">
                                <div class="detail-label">Full Name</div>
                                <div class="detail-value">@Model.FullName</div>
                            </div>
                            <div class="mb-3">
                                <div class="detail-label">Email Address</div>
                                <div class="detail-value">@Model.Email</div>
                            </div>
                            <div>
                                <div class="detail-label">Phone Number</div>
                                <div class="detail-value">
                                    @if (string.IsNullOrEmpty(Model.PhoneNumber))
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                    else
                                    {
                                        @Model.PhoneNumber
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Account Information -->
                    <div class="detail-card">
                        <div class="detail-header">
                            <div class="detail-icon">
                                <i class="fas fa-cog"></i>
                            </div>
                            <h3 class="detail-title">Account Information</h3>
                        </div>
                        <div class="detail-content">
                            <div class="mb-3">
                                <div class="detail-label">User Role</div>
                                <div class="detail-value">
                                    <span class="role-badge @($"role-{Model.Role?.ToLower()}")">
                                        @Model.Role
                                    </span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="detail-label">Account Created</div>
                                <div class="detail-value">@Model.DateCreated.ToString("MMM dd, yyyy")</div>
                            </div>
                            <div>
                                <div class="detail-label">User ID</div>
                                <div class="detail-value">#@Model.UserID</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Security Notice -->
                <div class="password-security">
                    <div class="security-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <p class="security-text">
                        <strong>Security Notice:</strong> Password is encrypted and cannot be viewed for security reasons.
                        Users can reset their password through the authentication system.
                    </p>
                </div>

                <!-- Action Buttons -->
                <div class="action-buttons">
                    <a asp-action="Edit" asp-route-id="@Model.UserID" class="btn-action btn-edit">
                        <i class="fas fa-edit me-2"></i> Edit User
                    </a>
                    <a asp-action="Index" class="btn-action btn-back">
                        <i class="fas fa-list me-2"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            // Add hover effects to cards
            $('.detail-card').hover(
                function() {
                    $(this).css('transform', 'translateY(-5px)');
                },
                function() {
                    $(this).css('transform', 'translateY(0)');
                }
            );

            // Add animation to stats cards
            $('.stat-card').each(function(index) {
                $(this).delay(index * 200).animate({
                    opacity: 1,
                    marginTop: 0
                }, 800);
            });
        });
    </script>
</body>
</html>