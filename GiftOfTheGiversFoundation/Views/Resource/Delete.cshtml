@model GiftOfTheGiversFoundation.Models.Resource

@{
    ViewData["Title"] = "Delete Resource";
}

<h2>Delete Resource</h2>

<h3>Are you sure you want to delete this resource?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Resource Type</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ResourceType)</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Quantity)</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Location)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ResourceID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>