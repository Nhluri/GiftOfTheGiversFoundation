@model GiftOfTheGiversFoundation.Models.User
@{
    Layout = null; // This completely removes layout dependency
    ViewData["Title"] = "Delete User";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gift Of The Givers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3f37c9;
            --danger: #e63946;
            --danger-dark: #c1121f;
            --warning: #f59e0b;
            --dark: #1d3557;
            --light: #f8f9fa;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .delete-container {
            max-width: 800px;
            width: 100%;
        }

        .delete-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 20px 50px rgba(0,0,0,0.15);
        }

        .delete-header {
            background: linear-gradient(135deg, var(--danger) 0%, var(--danger-dark) 100%);
            color: white;
            padding: 40px;
            text-align: center;
            position: relative;
        }

        .warning-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.9;
            animation: pulse 2s infinite;
        }

        .delete-header h1 {
            margin: 0;
            font-weight: 700;
            font-size: 2.2rem;
        }

        .delete-header p {
            margin: 10px 0 0;
            opacity: 0.9;
            font-size: 1.1rem;
        }

        .delete-body {
            padding: 40px;
        }

        .back-btn {
            background: white;
            color: var(--primary);
            border: 2px solid var(--primary);
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            margin-bottom: 20px;
            gap: 8px;
        }

            .back-btn:hover {
                background: var(--primary);
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
            }

        /* Warning Section */
        .warning-section {
            background: linear-gradient(135deg, #fef3c7 0%, #fef7cd 100%);
            border: 2px solid var(--warning);
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
            text-align: center;
        }

        .warning-title {
            color: #92400e;
            font-weight: 700;
            font-size: 1.3rem;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .warning-text {
            color: #92400e;
            margin: 0;
            font-size: 1rem;
        }

        /* User Details Card */
        .user-details-card {
            background: var(--light);
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            border-left: 5px solid var(--danger);
        }

        .user-header {
            display: flex;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid #e9ecef;
        }

        .user-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 20px;
        }

            .user-avatar i {
                font-size: 2rem;
                color: white;
            }

        .user-info h3 {
            margin: 0 0 5px 0;
            color: var(--dark);
            font-weight: 700;
        }

        .user-info p {
            margin: 0;
            color: #6c757d;
        }

        /* Details Grid */
        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        .detail-item {
            background: white;
            padding: 15px;
            border-radius: 10px;
            border-left: 4px solid var(--primary);
        }

        .detail-label {
            font-weight: 600;
            color: var(--dark);
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 5px;
        }

        .detail-value {
            color: #495057;
            font-size: 1rem;
            font-weight: 500;
        }

        .role-badge {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .role-admin {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            color: white;
        }

        .role-volunteer {
            background: linear-gradient(135deg, #4cc9f0 0%, #4895ef 100%);
            color: white;
        }

        .role-user {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            color: white;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 30px;
        }

        .btn-delete {
            background: linear-gradient(135deg, var(--danger) 0%, var(--danger-dark) 100%);
            border: none;
            color: white;
            padding: 15px 30px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 10px;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            min-width: 150px;
            justify-content: center;
        }

            .btn-delete:hover {
                transform: translateY(-2px);
                box-shadow: 0 7px 20px rgba(230, 57, 70, 0.4);
            }

        .btn-cancel {
            background: white;
            color: #6c757d;
            border: 2px solid #6c757d;
            padding: 15px 30px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 10px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            min-width: 150px;
            justify-content: center;
        }

            .btn-cancel:hover {
                background: #6c757d;
                color: white;
                transform: translateY(-2px);
                text-decoration: none;
            }

        /* Impact Warning */
        .impact-warning {
            background: white;
            border: 2px solid var(--danger);
            border-radius: 10px;
            padding: 20px;
            margin-top: 25px;
            text-align: center;
        }

        .impact-title {
            color: var(--danger);
            font-weight: 700;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .impact-text {
            color: #495057;
            margin: 0;
            font-size: 0.95rem;
        }

    </style>
</head>
<body>
    <div class="delete-container">
        <!-- Back Button -->
        <a href="/UserManagement/Index" class="back-btn">
            <i class="fas fa-arrow-left"></i> Back to Users
        </a>

        <div class="delete-card">
            <!-- Header Section -->
            <div class="delete-header">
                <div class="warning-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <h1>Delete User</h1>
                <p>This action cannot be undone</p>
            </div>

            <!-- Body Section -->
            <div class="delete-body">
                <!-- Warning Section -->
                <div class="warning-section">
                    <div class="warning-title">
                        <i class="fas fa-radiation"></i>
                        <span>Danger Zone</span>
                    </div>
                    <p class="warning-text">
                        You are about to permanently delete this user account. This action cannot be reversed.
                    </p>
                </div>

                <!-- User Details -->
                <div class="user-details-card">
                    <div class="user-header">
                        <div class="user-avatar">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="user-info">
                            <h3>@Model.FullName</h3>
                            <p>@Model.Email</p>
                        </div>
                    </div>

                    <div class="details-grid">
                        <!-- Full Name -->
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="fas fa-user me-1"></i>Full Name
                            </div>
                            <div class="detail-value">@Model.FullName</div>
                        </div>

                        <!-- Email -->
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="fas fa-envelope me-1"></i>Email Address
                            </div>
                            <div class="detail-value">@Model.Email</div>
                        </div>

                        <!-- Phone Number -->
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="fas fa-phone me-1"></i>Phone Number
                            </div>
                            <div class="detail-value">
                                @if (string.IsNullOrEmpty(Model.PhoneNumber))
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                                else
                                {
                                    @Model.PhoneNumber
                                }
                            </div>
                        </div>

                        <!-- Role -->
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="fas fa-shield-alt me-1"></i>Role
                            </div>
                            <div class="detail-value">
                                <span class="role-badge @($"role-{Model.Role?.ToLower()}")">
                                    @Model.Role
                                </span>
                            </div>
                        </div>

                        <!-- Date Created -->
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="fas fa-calendar-alt me-1"></i>Date Created
                            </div>
                            <div class="detail-value">@Model.DateCreated.ToString("MMM dd, yyyy")</div>
                        </div>

                        <!-- Account Status -->
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="fas fa-clock me-1"></i>Account Age
                            </div>
                            <div class="detail-value">
                                @{
                                    var accountAge = DateTime.Now - Model.DateCreated;
                                    var days = accountAge.Days;
                                    var months = days / 30;
                                    var years = months / 12;

                                    if (years > 0)
                                    {
                                        <text>@years year@(years > 1 ? "s" : "")</text>
                                    }
                                    else if (months > 0)
                                    {
                                        <text>@months month@(months > 1 ? "s" : "")</text>
                                    }
                                    else
                                    {
                                        <text>@days day@(days > 1 ? "s" : "")</text>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Impact Warning -->
                <div class="impact-warning">
                    <div class="impact-title">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>Important Notice</span>
                    </div>
                    <p class="impact-text">
                        Deleting this user will permanently remove all their data from the system.
                        This includes any associated records, activities, and permissions.
                    </p>
                </div>

                <!-- Delete Form -->
                <form asp-action="Delete">
                    <input type="hidden" asp-for="UserID" />
                    <div class="action-buttons">
                        <button type="submit" class="btn-delete">
                            <i class="fas fa-trash me-2"></i> Delete User
                        </button>
                        <a asp-action="Index" class="btn-cancel">
                            <i class="fas fa-times me-2"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            // Add confirmation for delete button
            $('form').on('submit', function(e) {
                const userEmail = '@Model.Email';
                const userRole = '@Model.Role';

                const confirmed = confirm(`Are you absolutely sure you want to delete ${userEmail} (${userRole})? This action cannot be undone.`);

                if (!confirmed) {
                    e.preventDefault();
                    return false;
                }

                // Show loading state
                $('.btn-delete').html('<i class="fas fa-spinner fa-spin me-2"></i> Deleting...');
                $('.btn-delete').prop('disabled', true);
                $('.btn-cancel').prop('disabled', true);
            });

            // Add hover effects
            $('.btn-delete').hover(
                function() {
                    $(this).css('transform', 'translateY(-2px)');
                },
                function() {
                    $(this).css('transform', 'translateY(0)');
                }
            );
        });
    </script>
</body>
</html>