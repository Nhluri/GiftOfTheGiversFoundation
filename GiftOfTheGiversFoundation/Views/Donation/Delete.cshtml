@model GiftOfTheGiversFoundation.Models.Donation

@{
    ViewData["Title"] = "Delete Donation";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Delete Donation</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5><i class="fas fa-exclamation-circle me-2"></i>Are you sure you want to delete this donation?</h5>
                        <p class="mb-0">This action cannot be undone.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>Donation Details</h5>
                            <dl class="row">
                                <dt class="col-sm-5">Donation Type:</dt>
                                <dd class="col-sm-7">@Model.DonationType</dd>

                                <dt class="col-sm-5">Amount:</dt>
                                <dd class="col-sm-7">
                                    @if (Model.Amount.HasValue)
                                    {
                                        <text>R @Model.Amount.Value.ToString("N2")</text>
                                    }
                                    else
                                    {
                                        <text>Not applicable</text>
                                    }
                                </dd>

                                <dt class="col-sm-5">Status:</dt>
                                <dd class="col-sm-7">
                                    <span class="badge
                                        @(Model.Status == "Completed" ? "badge-success" :
                                                                                    Model.Status == "Pending" ? "badge-warning" :
                                                                                    Model.Status == "Cancelled" ? "badge-danger" : "badge-secondary")">
                                        @Model.Status
                                    </span>
                                </dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <h5>Additional Information</h5>
                            <dl class="row">
                                <dt class="col-sm-5">Donation Date:</dt>
                                <dd class="col-sm-7">@Model.DonationDate.ToString("yyyy-MM-dd HH:mm")</dd>
                            </dl>

                            <h6 class="mt-3">Description:</h6>
                            <div class="border rounded p-2 bg-light">
                                @Model.Description
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="DonationID" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash me-2"></i>Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>