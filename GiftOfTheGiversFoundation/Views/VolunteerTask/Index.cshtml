@model IEnumerable<GiftOfTheGiversFoundation.Models.VolunteerTask>

@{
    ViewData["Title"] = "Volunteer Tasks";
}

<h2>Volunteer Tasks</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus-circle me-2"></i>Create New Task
    </a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Type</th>
                <th>Location</th>
                <th>Hours</th>
                <th>Urgency</th>
                <th>Status</th>
                <th>Created By</th>
                <th>Date Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <strong>@item.Title</strong>
                        @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 50)
                        {
                            <br>
                            <small class="text-muted">@item.Description.Substring(0, 50)...</small>
                        }
                    </td>
                    <td>@item.TaskType</td>
                    <td>@item.Location</td>
                    <td>@item.EstimatedHours.ToString("F1")</td>
                    <td>
                        <span class="badge bg-@(item.Urgency == "Critical" ? "danger" : item.Urgency == "High" ? "warning" : item.Urgency == "Medium" ? "info" : "success")">
                            @item.Urgency
                        </span>
                    </td>
                    <td>
                        <span class="badge bg-@(item.Status == "Available" ? "success" : item.Status == "Assigned" ? "warning" : item.Status == "Completed" ? "primary" : "secondary")">
                            @item.Status
                        </span>
                    </td>
                    <td>
                        @if (item.CreatedByUser != null)
                        {
                            <text>@item.CreatedByUser.FullName</text>
                        }
                        else
                        {
                            <text>User @item.CreatedByUserID</text>
                        }
                    </td>
                    <td>@item.DateCreated.ToString("MMM dd, yyyy")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.TaskID" class="btn btn-info btn-sm" title="Details">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.TaskID" class="btn btn-warning btn-sm" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.TaskID" class="btn btn-danger btn-sm" title="Delete">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h5>No volunteer tasks found.</h5>
        <p class="mb-0">Create your first volunteer task to get started.</p>
    </div>
}