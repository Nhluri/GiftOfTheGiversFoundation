@model GiftOfTheGiversFoundation.Models.Incident

@{
    ViewData["Title"] = "Incident Details";
}

<h2>Incident Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-2">Incident Type</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IncidentType)</dd>

        <dt class="col-sm-2">Severity</dt>
        <dd class="col-sm-10">
            <span class="badge bg-@(Model.Severity == "Critical" ? "danger" : Model.Severity == "High" ? "warning" : Model.Severity == "Medium" ? "info" : "success")">
                @Html.DisplayFor(model => model.Severity)
            </span>
        </dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Location)</dd>

        <dt class="col-sm-2">Incident Date</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IncidentDate)</dd>

        <dt class="col-sm-2">People Affected</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PeopleAffected)</dd>

        <dt class="col-sm-2">Emergency Needs</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EmergencyNeeds)</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">
            <span class="badge bg-@(Model.Status == "Resolved" ? "success" : Model.Status == "In Progress" ? "primary" : "secondary")">
                @Html.DisplayFor(model => model.Status)
            </span>
        </dd>

        <dt class="col-sm-2">Date Reported</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DateReported)</dd>


    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IncidentID" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>