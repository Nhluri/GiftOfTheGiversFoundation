@model GiftOfTheGiversFoundation.ViewModels.TwoFactorViewModel
@{
    ViewData["Title"] = "Two-Factor Verification";
}

<h2>Email Verification</h2>
<p>A verification code was sent to your email. Enter it below:</p>

<form asp-action="TwoFactor" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Verify</button>
</form>

<form asp-action="ResendCode" method="post" class="mt-2">
    <button type="submit" class="btn btn-link">Resend Code</button>
</form>
