@model GiftOfTheGiversFoundation.Models.User
@{
    Layout = null;
    ViewData["Title"] = "Edit User";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gift Of The Givers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3f37c9;
            --success: #4cc9f0;
            --warning: #f59e0b;
            --dark: #1d3557;
            --light: #f8f9fa;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .edit-container {
            max-width: 900px;
            width: 100%;
        }

        .edit-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 20px 50px rgba(0,0,0,0.15);
        }

        .edit-header {
            background: linear-gradient(135deg, var(--warning) 0%, #d97706 100%);
            color: white;
            padding: 40px;
            text-align: center;
            position: relative;
        }

        .header-icon {
            font-size: 3rem;
            margin-bottom: 15px;
            opacity: 0.9;
        }

        .edit-header h1 {
            margin: 0;
            font-weight: 700;
            font-size: 2.2rem;
        }

        .edit-header p {
            margin: 10px 0 0;
            opacity: 0.9;
            font-size: 1.1rem;
        }

        .edit-body {
            padding: 40px;
        }

        .back-btn {
            background: white;
            color: var(--primary);
            border: 2px solid var(--primary);
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            margin-bottom: 20px;
            gap: 8px;
        }

            .back-btn:hover {
                background: var(--primary);
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
            }

        /* Form Styles */
        .form-container {
            background: var(--light);
            border-radius: 15px;
            padding: 30px;
            margin-top: 20px;
        }

        .form-group-custom {
            margin-bottom: 25px;
            position: relative;
        }

        .form-label-custom {
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 8px;
            display: block;
            font-size: 0.95rem;
        }

        .input-group-custom {
            position: relative;
            display: flex;
            align-items: center;
        }

        .input-icon {
            position: absolute;
            left: 15px;
            color: #6c757d;
            z-index: 3;
        }

        .form-control-custom {
            padding: 12px 15px 12px 45px;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            height: 50px;
            transition: all 0.3s ease;
            font-size: 1rem;
            width: 100%;
        }

            .form-control-custom:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 0.2rem rgba(67, 97, 238, 0.25);
            }

            .form-control-custom.select-custom {
                padding-left: 45px;
                appearance: none;
                background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
                background-position: right 12px center;
                background-repeat: no-repeat;
                background-size: 16px;
            }

        .validation-message {
            font-size: 0.875rem;
            margin-top: 5px;
            display: block;
            color: #dc3545;
            font-weight: 500;
        }

        .validation-summary {
            background: linear-gradient(135deg, #dc3545 0%, #c1121f 100%);
            color: white;
            border-radius: 10px;
            padding: 15px 20px;
            margin-bottom: 25px;
        }

            .validation-summary ul {
                margin: 0;
                padding-left: 20px;
            }

        .btn-save {
            background: linear-gradient(135deg, var(--success) 0%, #4895ef 100%);
            border: none;
            color: white;
            padding: 15px 30px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 10px;
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 10px;
        }

            .btn-save:hover {
                transform: translateY(-2px);
                box-shadow: 0 7px 20px rgba(76, 201, 240, 0.4);
            }

        /* Form Sections */
        .form-section {
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid #e9ecef;
        }

        .section-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .section-title i {
                color: var(--warning);
            }

        /* User Info Preview */
        .user-preview {
            background: white;
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 25px;
            border-left: 5px solid var(--warning);
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .user-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .user-avatar i {
                font-size: 2rem;
                color: white;
            }

        .user-info h4 {
            margin: 0 0 5px 0;
            color: var(--dark);
            font-weight: 700;
        }

        .user-info p {
            margin: 0;
            color: #6c757d;
        }

        .role-badge {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .role-admin {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            color: white;
        }

        .role-volunteer {
            background: linear-gradient(135deg, var(--success) 0%, #4895ef 100%);
            color: white;
        }

        .role-user {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            color: white;
        }

        /* Role Selection */
        .role-preview {
            display: flex;
            gap: 10px;
            margin-top: 10px;
            flex-wrap: wrap;
        }

        .role-option {
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

            .role-option:hover {
                transform: translateY(-2px);
            }

            .role-option.active {
                border-color: var(--dark);
                transform: translateY(-2px);
            }

        /* Password Toggle */
        .password-toggle {
            position: absolute;
            right: 15px;
            background: none;
            border: none;
            color: #6c757d;
            cursor: pointer;
            z-index: 4;
        }

            .password-toggle:hover {
                color: var(--primary);
            }

    </style>
</head>
<body>
    <div class="edit-container">
        <!-- Back Button -->
        <a href="/UserManagement/Index" class="back-btn">
            <i class="fas fa-arrow-left"></i> Back to Users
        </a>

        <div class="edit-card">
            <!-- Header Section -->
            <div class="edit-header">
                <div class="header-icon">
                    <i class="fas fa-user-edit"></i>
                </div>
                <h1>Edit User</h1>
                <p>Update user information and permissions</p>
            </div>

            <!-- Body Section -->
            <div class="edit-body">
                <!-- User Preview -->
                <div class="user-preview">
                    <div class="user-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="user-info">
                        <h4>@Model.FullName</h4>
                        <p>@Model.Email</p>
                        <span class="role-badge @($"role-{Model.Role?.ToLower()}")">
                            @Model.Role
                        </span>
                    </div>
                </div>

                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <div class="form-container">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="UserID" />

                        <!-- Personal Information Section -->
                        <div class="form-section">
                            <div class="section-title">
                                <i class="fas fa-user-circle"></i>
                                <span>Personal Information</span>
                            </div>

                            <!-- Full Name -->
                            <div class="form-group-custom">
                                <label class="form-label-custom" asp-for="FullName">Full Name</label>
                                <div class="input-group-custom">
                                    <i class="fas fa-user input-icon"></i>
                                    <input asp-for="FullName" class="form-control-custom" placeholder="Enter full name" />
                                </div>
                                <span asp-validation-for="FullName" class="validation-message"></span>
                            </div>

                            <!-- Email -->
                            <div class="form-group-custom">
                                <label class="form-label-custom" asp-for="Email">Email Address</label>
                                <div class="input-group-custom">
                                    <i class="fas fa-envelope input-icon"></i>
                                    <input asp-for="Email" class="form-control-custom" placeholder="Enter email address" />
                                </div>
                                <span asp-validation-for="Email" class="validation-message"></span>
                            </div>

                            <!-- Phone Number -->
                            <div class="form-group-custom">
                                <label class="form-label-custom" asp-for="PhoneNumber">Phone Number</label>
                                <div class="input-group-custom">
                                    <i class="fas fa-phone input-icon"></i>
                                    <input asp-for="PhoneNumber" class="form-control-custom" placeholder="Enter phone number" />
                                </div>
                                <span asp-validation-for="PhoneNumber" class="validation-message"></span>
                            </div>
                        </div>

                        <!-- Account Settings Section -->
                        <div class="form-section">
                            <div class="section-title">
                                <i class="fas fa-shield-alt"></i>
                                <span>Account Settings</span>
                            </div>

                            <!-- Password -->
                            <div class="form-group-custom">
                                <label class="form-label-custom" asp-for="Password">Password</label>
                                <div class="input-group-custom">
                                    <i class="fas fa-lock input-icon"></i>
                                    <input asp-for="Password" type="password" class="form-control-custom" placeholder="Enter new password" id="passwordInput" />
                                    <button type="button" class="password-toggle" id="passwordToggle">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Leave blank to keep current password
                                </small>
                                <span asp-validation-for="Password" class="validation-message"></span>
                            </div>

                            <!-- Role -->
                            <div class="form-group-custom">
                                <label class="form-label-custom" asp-for="Role">User Role</label>
                                <div class="input-group-custom">
                                    <i class="fas fa-user-tag input-icon"></i>
                                    <select asp-for="Role" class="form-control-custom select-custom">
                                        <option value="">Select a role</option>
                                        <option value="Admin">Administrator</option>
                                        <option value="Volunteer">Volunteer</option>
                                        <option value="User">User</option>
                                    </select>
                                </div>
                                <div class="role-preview">
                                    <div class="role-option role-admin @(Model.Role == "Admin" ? "active" : "")" data-role="Admin">
                                        <i class="fas fa-crown me-1"></i>Admin
                                    </div>
                                    <div class="role-option role-volunteer @(Model.Role == "Volunteer" ? "active" : "")" data-role="Volunteer">
                                        <i class="fas fa-hands-helping me-1"></i>Volunteer
                                    </div>
                                    <div class="role-option role-user @(Model.Role == "User" ? "active" : "")" data-role="User">
                                        <i class="fas fa-user me-1"></i>User
                                    </div>
                                </div>
                                <span asp-validation-for="Role" class="validation-message"></span>
                            </div>

                            <!-- Date Created -->
                            <div class="form-group-custom">
                                <label class="form-label-custom" asp-for="DateCreated">Account Creation Date</label>
                                <div class="input-group-custom">
                                    <i class="fas fa-calendar-alt input-icon"></i>
                                    <input asp-for="DateCreated" class="form-control-custom" type="datetime-local" />
                                </div>
                                <span asp-validation-for="DateCreated" class="validation-message"></span>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn-save">
                            <i class="fas fa-save me-2"></i> Save Changes
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            // Password toggle functionality
            $('#passwordToggle').on('click', function() {
                const passwordInput = $('#passwordInput');
                const icon = $(this).find('i');

                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordInput.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Role option selection
            $('.role-option').on('click', function() {
                const role = $(this).data('role');
                $('select[name="Role"]').val(role);
                $('.role-option').removeClass('active');
                $(this).addClass('active');

                // Update preview badge
                $('.role-badge')
                    .removeClass('role-admin role-volunteer role-user')
                    .addClass(`role-${role.toLowerCase()}`)
                    .text(role);
            });

            // Update role options when select changes
            $('select[name="Role"]').on('change', function() {
                const role = $(this).val();
                $('.role-option').removeClass('active');
                $(`.role-option[data-role="${role}"]`).addClass('active');
            });

            // Form submission handling
            $('form').on('submit', function() {
                // Show loading state
                $('.btn-save').html('<i class="fas fa-spinner fa-spin me-2"></i> Saving...');
                $('.btn-save').prop('disabled', true);
            });

            // Auto-format phone number
            $('input[name="PhoneNumber"]').on('input', function() {
                let value = $(this).val().replace(/\D/g, '');
                if (value.length > 0) {
                    value = value.replace(/(\d{3})(\d{3})(\d{4})/, '($1) $2-$3');
                }
                $(this).val(value);
            });
        });
    </script>
</body>
</html>