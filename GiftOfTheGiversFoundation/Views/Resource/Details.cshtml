@model GiftOfTheGiversFoundation.Models.Resource

@{
    ViewData["Title"] = "Resource Details";
}

<h2>Resource Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Resource Type</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ResourceType)</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Quantity)</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Location)</dd>

        <dt class="col-sm-2">Availability</dt>
        <dd class="col-sm-10">
            <span class="badge bg-@(Model.Availability == "Available" ? "success" : "warning")">
                @Html.DisplayFor(model => model.Availability)
            </span>
        </dd>

        <dt class="col-sm-2">Date Submitted</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DateSubmitted)</dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>